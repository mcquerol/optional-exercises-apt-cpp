void CCoordinate::getCartesian(float &x, float &y, float &z)
{
	this->m_x = *x;
	this->m_y = *y;
	this->m_z = *z;

}

void CCoordinate::setCartesian(float x, float y, float z)
{
	m_x = x;
	m_y = y;
	m_z = z;
}

